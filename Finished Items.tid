	</td>
</$reveal>
<tr>
	<td
		colspan=6
		style='position:relative;top:100%'
	>
		<$reveal
			type='popup'
			state="""$:/state/Edit$(ListType)$/popup/$(CurrentEntry)$"""
		>
			<div
				class='tc-popup-keep'
				style='border:solid;border-color:grey;border-width:1px;background-color:white;max-width:800px;padding:1em;width:95vw;top:1em;position:absolute;max-width:700px;top:-1em'
			>

				<$tiddler
					tiddler=<<CurrentEntry>>
				>

					<$transclude
						tiddler='$:/plugins/OokTech/CategoryLists/EditEntryTemplate'
						mode=block
					/>

				</$tiddler>

			</div>
		</$reveal>
	</td>
</tr>
\end

\define thisEntryPopup()
<$reveal
	type="""popup"""
	state="""$:/state/popup/$(ListType)$list/$(CurrentEntry)$"""
>
	<div
		class="""tc-popup-keep tc-drop-down"""
	>

		<$transclude
			tiddler=<<CurrentEntry>>
			mode=block
		/>

	</div>
</$reveal>
\end

